{
    "manifest_version": 3,
    "name": "LinkedIn Scraper",
    "version": "1.0",
    "description": "Executes a function on page load for a specific URL",
    "permissions": [
        "activeTab",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "https://*.linkedin.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    }
}